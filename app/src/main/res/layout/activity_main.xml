<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffa5ceff"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView android:text="@string/portfolio_header" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/portfolio_header"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/black" />

    <Button
        android:text="@string/popular_movies_1"
        android:id="@+id/popular_movies_1"
        android:clickable="true"
        android:onClick="openApp"
        android:enabled="true"
        style="@style/OrangeAppLaunchButton" />

    <Button
        android:text="@string/popular_movies_2"
        android:id="@+id/popular_movies_2"
        android:enabled="true"
        android:onClick="openApp"
        android:clickable="true"
        style="@style/OrangeAppLaunchButton"/>

    <Button
        android:text="@string/super_duo"
        android:id="@+id/super_duo"
        android:enabled="true"
        android:onClick="openApp"
        android:clickable="true"
        style="@style/OrangeAppLaunchButton" />

    <Button
        android:text="@string/build_it_bigger"
        android:id="@+id/build_it_bigger"
        android:enabled="true"
        android:onClick="openApp"
        android:clickable="true"
        style="@style/OrangeAppLaunchButton" />

    <Button
        android:text="@string/make_your_app_mat"
        android:id="@+id/make_your_app_mat"
        android:enabled="true"
        android:onClick="openApp"
        android:clickable="true"
        style="@style/OrangeAppLaunchButton" />

    <Button
        android:text="@string/capstone"
        android:id="@+id/capstone"
        android:enabled="true"
        android:onClick="openApp"
        android:clickable="true"
        style="@style/RedAppLaunchButton"/>

</LinearLayout>
